.blockPopup
    position fixed
    display flex
    align-items center
    justify-content center
    width 100%
    height 100%
    background rgba(0,0,0,0.8)
    opacity 0
    z-index 0
    will-change opacity
    transition opacity .3s, z-index 0s .3s
    cursor pointer
    .center
        width 50vmin
        height @width
        background red
        padding 20px
        box-sizing border-box
        transform translateY(10vh)
        will-change transform
        transition transform .3s
        cursor default
    &.open
        opacity 1
        z-index 10
        transition opacity .3s
        .center
            transform translateY(0)