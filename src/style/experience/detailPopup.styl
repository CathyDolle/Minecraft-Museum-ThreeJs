.blockPopup
    position fixed
    display flex
    align-items center
    justify-content center
    width 100%
    height 100%
    background rgba(0,0,0,0.8)
    opacity 0
    z-index 0
    will-change opacity
    transition opacity .3s, z-index 0s .3s
    cursor pointer
    .center
        width 50vw
        max-height 80vh
        background #C6C6C6
        border 2px solid #000000
        padding 12px
        box-sizing border-box
        transform translateY(10vh)
        will-change transform
        transition transform .3s
        cursor default
        .head
            display flex
            align-items center
            justify-content space-between
            h4
                margin 12px
                font-size 14px
            .close
                opacity 0.5
                font-size 10px
        .content
            background #000000
            padding 24px
            h3
                color #FF9600
                font-size 22px
                margin 12px 0 8px
            p
                color #ffffff
                font-size 14px
                margin 0
                line-height 1.6
    &.open
        opacity 1
        z-index 10
        transition opacity .3s
        .center
            transform translateY(0)