.welcomeScreen
    position fixed
    z-index 100
    width 100vw
    height 100vh
    background rgba(0, 0, 0, 0.8)
    display flex
    flex-direction column
    align-items center
    justify-content center
    opacity 1
    will-change opacity
    transition opacity .3s, z-index 0s .3s
    &.hidden
        opacity 0
        z-index -10
        transition opacity .3s, z-index 0s
    img
        width 60%
    form
        margin 40px
        display flex
        flex-direction column
        align-items center
        input
            font-family "Minecraft", sans-serif
            letter-spacing 1px