.loader
    position absolute
    width 100vw
    height 100vh
    background rgba(0, 0, 0, 0.9)
    display flex
    align-items center
    justify-content center
    z-index 1000
    will-change opacity
    transition opacity .3s, z-index 0s .3s
    &.hidden
        opacity 0
        z-index -1000
    .bar
        width 40vw
        height 20px
        border 2px solid #fff
        overflow hidden
        .progression
            width 100%
            height 100%
            background #008942
            transform-origin left
            animation loading 6s linear infinite

@keyframes loading
    0%
        transform scaleX(0)
    50%
        transform scaleX(1) translateX(0%)
    100%
        transform scaleX(1) translateX(100%)